<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="40dp"
    android:background="#CC12121F"> <!-- Semi-transparent dark background -->

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_lock_idle_alarm"  />
        <!-- Use a suitable alarm icon - ic_lock_idle_alarm is standard -->
        <!-- Or copy your app icon to res/drawable and use "@drawable/your_app_icon" -->

    <TextView
        android:id="@+id/alarm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Focus Time!"
        android:textSize="28sp"
        android:textColor="#EAEAEA"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/alarm_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete your BharatAce tasks."
        android:textSize="18sp"
        android:textColor="#CCCCCC"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>

     <!-- Add placeholder for task info later -->
    <TextView
        android:id="@+id/alarm_task_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="#B0B0B0"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/snooze_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snooze (30s)"
            android:layout_marginEnd="10dp"
             />
            <!-- Style button as needed -->

        <Button
            android:id="@+id/dismiss_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Learning"
            android:layout_marginStart="10dp"
             />
            <!-- Style button -->

    </LinearLayout>
     <TextView
        android:id="@+id/snooze_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snoozes left: 3"
        android:textSize="12sp"
        android:textColor="#AAAAAA"
        android:layout_marginTop="15dp"
        />

</LinearLayout>